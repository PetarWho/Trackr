<!-- shadow_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Add top and bottom gradients for shadow effect -->
    <gradient
        android:startColor="#F4F4F4"
        android:centerColor="@color/white"
        android:endColor="#F4F4F4"
        android:angle="270" />

    <!-- Add padding to control shadow height -->
    <padding
        android:left="0dp"
        android:top="5dp"
        android:right="0dp"
        android:bottom="5dp" />

</shape>
